{
	"_version": "1.12.0",

	"sap.app": {
		"id": "crudproject",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "${version}"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "crudproject.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"resources": {
			"css": [{
				"uri": "css/styles.css"
			}]
		},
		"dependencies": {
			"minUI5Version": "1.130.2",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "crudproject.i18n.i18n"
				}
			}
		},
		

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "crudproject.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				},
				{
					"pattern": "productDetail/{ID}",
					"name": "productDetail",
					"target":["details"]

				},
				{
					"pattern": "categories",
					"name": "categories",
					"target": "categoryProducts"
				},
				{
					"pattern": "categoryDetail/{ID}",
					"name": "categoryDetail",
					"target": "categoryDetailS"
				},
				{
					"pattern": "customControls",
					"name": "customControls",
					"target": "customPage"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",
					"viewName": "Main"
				},
				"details": {
					"viewName": "Detail",
					"viewId": "productDetailView"
				},
				"categoryProducts":{
					"viewName": "Categories",
					"viewId": "categoryId"
				},
				"categoryDetailS":{
					"viewName": "CategoryDetail",
					"viewId": "category"
				},
				"customPage":{
					"viewName": "CustomPage",
					"viewId": "custom"
				}
			}
		}
	}
}
