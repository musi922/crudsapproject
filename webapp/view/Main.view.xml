<mvc:View
	controllerName="crudproject.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">

	<Page
		title="{i18n>appTitle}"
		id="page" class="sapUiSmallMargin">
		<headerContent>
		<Toolbar >
		<Button text="Create Product" press="onShowProductDialog"></Button>
		</Toolbar>
		</headerContent>
		<content>
			<Table id="odataTable" inset="false" items="{/Products}">
			<headerToolbar>
			<Toolbar >
			<Title text="Product List"></Title>
			</Toolbar>
			</headerToolbar>
			<columns>
			<Column >
			<header>
			<Label text="Product ID"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Name"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Price"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Rating"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Release Date"></Label>
			</header>
			</Column>
			<Column >
			<header>
			<Label text="Actions"></Label>
			</header>
			</Column>
			</columns>
			<items>
			<ColumnListItem type="Active" press="onShowData" id="items">
			<Text text="{ID}"></Text>
			<Text text="{Name}"/>
			<Text text="{Price}"/>
			<Text text="{Rating}"/>
			<Text text="{path: 'ReleaseDate', formatter: '.formatter.formatDate'}"/>
			<Button icon="sap-icon://edit" press="onShowEditingDialog"></Button>
			</ColumnListItem>
			</items>

			
			</Table>

			<Panel id="productPanel" headerText="Product Detail">
			<VBox >
			<Text id="productId" text="{ID}"></Text>
			<Text id="productName" text="{Name}"></Text>
			<Text id="productPrice" text="{Price}"></Text>
			<Text id="productRating" text="{Rating}"></Text>
			<Text id="productReleaseDate" text="{path: 'ReleaseDate', formatter: '.formatter.formatDate'}"></Text>
			</VBox>
			</Panel>
		</content>
	</Page>

<Dialog id="updateDialog" title="Update Product">
    <VBox class="sapUiSmallMargin">
        <Label text="Product Name"/>
        <Input id="productNameText"/>
        <Label text="Price"/>
        <Input id="productPriceText" type="Number"/>
        <Label text="Rating"/>
        <Input id="productRatingText" type="Number"/>
        <Label text="Release Date"/>
        <DatePicker id="productReleaseDateText"/>
    </VBox>
    <beginButton>
        <Button text="Save" press="onEditPress"/>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="onCloseEditingDialog"/>
    </endButton>
</Dialog>
	

    <Dialog id="createProductDialog" title="Create Product" type="Message">
        <VBox class="sapUiSmallMargin">
            <Label text="Product ID"/>
            <Input id="newProductId" type="Number"/>
            <Label text="Name"/>
            <Input id="newProductName"/>
            <Label text="Price"/>
            <Input id="newProductPrice" type="Number"/>
            <Label text="Rating"/>
            <Input id="newProductRating" type="Number"/>
            <Label text="Release Date"/>
            <DatePicker id="newProductReleaseDate"/>
        </VBox>
        <beginButton>
            <Button text="Create" press="onCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseProductDialog"/>
        </endButton>
    </Dialog>

</mvc:View>
